@model BlogResponseModel

<h4>Blog</h4>


<form method="post" action="/BlogRefit/Update/@Model.Data.Blog_Id">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="Blog_Title" value="@Model.Data.Blog_Title" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" name="Blog_Author" value="@Model.Data.Blog_Author" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Content</label>
        <input type="text" name="Blog_Content" value="@Model.Data.Blog_Content" class="form-control">
    </div>
    <button type="button" class="btn btn-secondary">Back</button>
    <button type="submit" class="btn btn-success">Update</button>
</form>
